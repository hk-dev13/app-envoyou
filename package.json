{
  "name": "envoyou-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:production": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "preview:production": "vite preview --mode production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"No tests specified\" && exit 0",
    "serve": "vite preview --port 3000",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "build:netlify": "NODE_ENV=production npm run build",
    "type-check": "echo \"Type checking not configured\"",
    "validate": "npm run lint && npm run type-check || echo 'Type checking not configured - skipping'",
    
    "prepare": "npm run validate",
    "openapi:validate": "swagger-cli validate openapi/envoyou-api.yaml",
    "openapi:types": "openapi-typescript openapi/envoyou-api.yaml -o src/lib/generated-api-types.d.ts",
    "sdk:generate": "openapi -i openapi/envoyou-api.yaml -o src/sdk --client fetch --indent 2",
    "docs:spec": "npm run openapi:validate && echo 'Spec OK'",
    "schema:validate": "ajv validate --spec=draft2020 -s schemas/alert-rule.schema.json -d schemas/examples/alert-rule.example.json",
    "validate:all": "npm run openapi:validate && npm run schema:validate && npm run openapi:types && npm run md:lint",
    "md:lint": "markdownlint-cli2 'docs/**/*.md' 'docs/**/*.mdx'",
    "md:lint:fix": "markdownlint-cli2 --fix 'docs/**/*.md' 'docs/**/*.mdx'",
    "md:fences:check": "grep -R '^```$' docs || true",
    "md:lint:changed": "git diff --name-only origin/main...HEAD | grep '^docs/' | xargs -r markdownlint-cli2",
    "md:fences:label": "grep -Rrl '^```$' docs | xargs -r perl -0777 -i -pe 's/^```$/```text/gm'"
    ,"archive:summary": "node scripts/archive-summary.js"
    ,"check:daily-summary": "node scripts/check-daily-summary.js"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/react": "^10.10.0",
    "@supabase/supabase-js": "^2.57.4",
    "aos": "^2.3.4",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "string-replace-loader": "^3.2.0",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.8",
    "vite": "^7.1.2",
    "swagger-cli": "^4.0.4",
    "openapi-typescript": "^7.4.1",
    "redocusaurus": "^2.1.1",
    "ajv-cli": "^5.0.0",
    "markdownlint": "^0.32.1",
    "markdownlint-cli2": "^0.15.0",
    "openapi-typescript-codegen": "^0.29.0"
  }
}
